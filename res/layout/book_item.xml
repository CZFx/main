<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/mobile_image"
        android:layout_width="160dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toStartOf="@+id/mobile_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mobile_desc"
        android:layout_width="129dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toTopOf="@+id/mobile_price"
        app:layout_constraintStart_toStartOf="@+id/mobile_name"
        app:layout_constraintTop_toBottomOf="@+id/mobile_name" />

    <TextView
        android:id="@+id/mobile_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="xiaomi"
        android:textColor="#F0000000"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/mobile_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mobile_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/mobile_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Â¥12333333333"
        android:textColor="#F0FF0000"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/mobile_desc"
        app:layout_constraintTop_toBottomOf="@+id/mobile_desc" />


</androidx.constraintlayout.widget.ConstraintLayout>